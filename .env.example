# =========================================================================
# TEMPLATE DE CONFIGURAÇÃO - Crypto Bot
# Copie este arquivo para . env e preencha com seus valores
# =========================================================================

# Identificação do Bot (obrigatórios)
SYMBOL=BTCUSDT
TIMEFRAME=1m

# Exchange (obrigatórios)
EXCHANGE=binance
API_KEY=sua_api_key_aqui
API_SECRET=seu_api_secret_aqui

# Trading
LEVERAGE=1
AMOUNT=0.0
SANDBOX=true

# Risk Management
STOP_LOSS_PERCENT=2.0
TAKE_PROFIT_PERCENT=4.0

# Timing
WAIT_SLEEP=60
MONITORING_SLEEP=300
MAX_RETRIES=3

# Sistema
TIMEZONE=America/Sao_Paulo
LOG_LEVEL=INFO